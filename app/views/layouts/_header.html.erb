<div class="grid grid-cols-3 gap-4 items-center p-10">
  <div class="col-span-2">
    <%= link_to 'おもいでつむぎ', root_path, class: "text-4xl font-bold" %>
  </div>
  <div class="text-center">
    <% if logged_in? %>
      <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" } %>
    <% else %>
      <%= link_to 'ログイン / 新規登録', auth_path %>
    <% end %>
  </div>
</div>