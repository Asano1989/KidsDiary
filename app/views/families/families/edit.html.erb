<div id="edit_family" class="text-center">
  <h1 class="text-3xl font-bold m-6">家族（グループ）の編集</h1>
  <div id="family_form">
    <%= form_with model: @family, url: '/family' do |f| %>
      <div>
        <div>
          <%= f.label :name, "家族（グループ）名" %>
        </div>
        <div>
          <%= f.text_field :name, class: "border border-default-medium rounded-base" %>
          <%= f.submit "更新", class: "box-border border border-default m-2 pl-2 pr-2" %>
        </div>
      </div>
    <% end %>
  </div>

  <div id="family_info">
    <div class="mt-6 m-2">
      家族（グループ）メンバー一覧
    </div>
    <div>
      <ul class="list-disc list-inside">
        <% @members.each do |member| %>
          <li>
            <%= member.name %>
            <% if member.id == @family.owner_id %>（管理者）<% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="mt-6 m-2">
      子ども一覧
    </div>
    <div>
      <%= button_to "子どもの情報を編集", root_path, method: :get, class: "box-border border border-default-medium shadow-xs font-medium leading-5 rounded-full text-sm px-4 py-2 m-2" %>
      <%= button_to "子どもの情報を追加", root_path, method: :get, class: "box-border border border-default-medium shadow-xs font-medium leading-5 rounded-full text-sm px-4 py-2 m-2" %>
    </div>
  </div>

</div>