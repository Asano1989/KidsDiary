<div id="date_index" class="text-center">
  <h1 class="text-3xl font-bold m-6"><%= l(@date.to_date, format: :long) %>の日記</h1>

  <% if @diaries.any? %>
    <%= render @diaries %>
  <% else %>
    <div>
      <p>日記はありません。</p>
    </div>
  <% end %>

  <div class="my-8">
    <%= link_to "カレンダーに戻る", diaries_path, data: { turbo: false } %>
  </div>
</div>