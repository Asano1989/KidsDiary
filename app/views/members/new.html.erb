<div id="new_member" class="text-center">
  <h1 class="text-3xl font-bold m-6">家族（グループ）にメンバーを追加</h1>

  <div id="add_member_form">
    <%= form_with url: root_path, local: true do |f| %>
      <div>
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div>
        <%= f.text_field :email, class: "border border-default-medium rounded-base" %>
      </div>
      <div>
        <%= f.submit '家族（グループ）に招待', class: "box-border border border-default-medium shadow-xs font-medium rounded-full text-sm px-4 py-2 m-2" %>
      </div>
    <% end %>
  </div>
</div>